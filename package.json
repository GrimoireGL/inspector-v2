{
  "name": "grimoirejs-inspector",
  "description": "An awesome devtool for Grimoire.js",
  "version": "0.0.0",
  "author": "kyasbal",
  "files": [
    "dist",
    "resources",
    "src"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot --progress",
    "dev-build": "NODE_ENV=development webpack --progress",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "test": "npm run build",
    "rewrite-manifest-version": "node ./copy-version.js",
    "publish-chrome-webstore": "npm run rewrite-manifest-version && sh ./make-zip.sh && webstore upload --file publish.zip --auto-publish",
    "semantic-release": "semantic-release pre && npm publish && find ./node_modules -name '*.pem' -exec rm {} \\; && npm run publish-chrome-webstore && semantic-release post"
  },
  "dependencies": {
    "@types/chrome": "^0.0.48",
    "@types/lodash": "^4.14.92",
    "@types/validator": "^6.3.0",
    "color-convert": "^1.9.1",
    "eventemitter3": "^2.0.3",
    "grimoirejs": "^1.0.9-beta10",
    "grimoirejs-animation": "^2.0.0",
    "lodash": "^4.17.4",
    "ts-serializer": "^1.0.1",
    "validator": "^8.2.0",
    "vue": "^2.5.13",
    "vue-class-component": "^5.0.2",
    "vue-color": "^2.4.3",
    "vue-markdown": "^2.2.4",
    "vue-property-decorator": "^5.3.0",
    "vuex": "^2.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "chrome-webstore-upload-cli": "^1.1.1",
    "condition-circle": "^1.6.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "file-loader": "^0.11.2",
    "semantic-release": "^7.0.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-loader": "^2.3.7",
    "typescript": "^2.6.2",
    "vue-loader": "^13.7.0",
    "vue-template-compiler": "^2.5.13",
    "vue-ts-loader": "^0.0.3",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrimoireGL/inspector-v2.git"
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}
