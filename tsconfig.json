{
  "compilerOptions":{
    "target": "es5",
    "module": "es6",
    "moduleResolution":"node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2017",
      "es2016",
      "es2015",
      "es2015.iterable",
      "es2015.generator"
    ],
    "strict":true
  },
  "filesGlob": [
          "src/**/*.ts",
          "src/**/*.tsx",
          "src/*.ts",
          "src/*.tsx"
    ]
}
